@{
    ViewBag.Title = "Home Page";
}
<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f5f5f5;
    }

    .carousel-inner img {
        height: 60vh;
        object-fit: cover;
    }

    .text-overlay {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: white;
        font-size: 2rem;
        text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.7);
    }

    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        background-color: rgba(0, 0, 0, 0.5);
    }

    .card-deck {
        margin: 3rem 0;
    }

    .card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        border: none;
    }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }

    .card-title {
        font-weight: bold;
        font-size: 1.25rem;
    }

    .bg-primary, .bg-success, .bg-secondary {
        color: white;
    }

    .shadow-lg {
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15) !important;
    }

    /* Announcement Section */
    .announcement-section {
        background-color: #ffc107;
        color: #000;
        padding: 15px;
        margin-bottom: 30px;
    }

        .announcement-section marquee {
            font-size: 1.2rem;
        }


    /* Announcement Section */
    .announcement-section {
        background-color: #ffc107;
        color: #000;
        padding: 15px;
        margin-bottom: 30px;
    }

        .announcement-section marquee {
            font-size: 1.2rem;
        }

    /* Featured Programs Section */
    .featured-programs .card img {
        height: 200px;
        object-fit: cover;
    }

    /* Testimonials Section */
    .testimonial-card {
        background-color: #fff;
        border: 1px solid #ddd;
        padding: 20px;
        margin: 10px;
        border-radius: 10px;
    }

    /* Gallery Section */
    .campus-gallery img {
        margin-bottom: 20px;
    }

    /* News & Events Section */
    .news-events {
        background-color: #343a40;
        color: #fff;
    }

        .news-events h3 {
            color: #ffc107;
        }

    .event-item {
        margin-bottom: 20px;
    }

  
</style>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/Content/images/cl1.jpg" alt="First slide">
            <div class="text-overlay">Welcome to Our College</div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/images/c2.jpg" alt="Second slide">
            <div class="text-overlay">Explore Our Campus</div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/images/c3.jpg" alt="Third slide">
            <div class="text-overlay">Achieve Your Dreams</div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/images/c4.jpg" alt="Fourth slide">
            <div class="text-overlay">Join Us Today</div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<!-- Announcement Section -->
<div class="announcement-section">
    <h4 class="font-weight-bold">Latest Announcements</h4>
    <marquee behavior="scroll" direction="left">Admissions for 2024-25 are now open! | College Fest starting next week | Results for Semester Exams will be out on October 15th.</marquee>
</div>

<div class="card-deck">
    <div class="card bg-primary shadow-lg">
        <div class="card-body">
            <h5 class="card-title">Our Programs</h5>
            <p class="card-text">Explore a wide range of undergraduate and postgraduate programs designed to foster learning and development.</p>
        </div>
    </div>
    <div class="card bg-success shadow-lg">
        <div class="card-body">
            <h5 class="card-title">Campus Life</h5>
            <p class="card-text">Experience vibrant campus life with student activities, clubs, and events tailored to enrich your academic journey.</p>
        </div>
    </div>
    <div class="card bg-secondary shadow-lg">
        <div class="card-body">
            <h5 class="card-title">Admissions</h5>
            <p class="card-text">Join our community by applying today. Learn about our admission process and what makes us unique.</p>
        </div>
    </div>
</div>
<hr class="border-warning" />

<div class="row">
    <!-- Notice Board Section -->
    <div class="col-md-6">
        <h3 class="text-info mb-3">Notice Board</h3>
        <ul class="list-group list-group-flush">
            <li class="list-group-item border-warning shadow-sm">
                <h4 class="font-weight-bold">Admission Notice</h4>
                <p>FYBA, FYBCOM, FYBSc - Admissions are now open. Apply by 20 Oct 2024.</p>
                <small class="text-muted">Posted on: October 9, 2024</small>
            </li>
            <!-- Additional Notice Items -->
            <li class="list-group-item border-warning shadow-sm">
                <h4 class="font-weight-bold">Exam Schedule Released</h4>
                <p>Final year exams will be held starting November 1st. Check the timetable.</p>
                <small class="text-muted">Posted on: October 5, 2024</small>
            </li>
            <li class="list-group-item border-warning shadow-sm">
                <h4 class="font-weight-bold">Holiday Notice</h4>
                <p>The college will remain closed on Diwali from November 10th to 14th.</p>
                <small class="text-muted">Posted on: October 1, 2024</small>
            </li>
        </ul>
    </div>

    <!-- About Us Section -->
    <div class="col-md-6">
        <h3 class="text-info mb-3">About The College</h3>
        <div class="bg-light p-4 shadow-sm rounded">
            <p class="text-justify">
                <strong>Satish Pradhan Dnyanasadhana College, Thane</strong> (Formerly known as Dnyanasadhana College, Thane) is a Premier Education Institute, registered under the Societies Registration Act, 1960, on 2nd July 1980.
                The Junior College was recognized by the Education Department, Government of Maharashtra by an order dated 22nd October 1980. By virtue of natural growth, a full-fledged Degree College was started on 13th June 1983.
                The college is permanently affiliated to the University of Mumbai and is recognized by UGC 2(f) and 12B. It is Re-Accreditated 'B+' Grade (CGPA 2.69 - 3rd Cycle completed) by NAAC & also ISO (21001:2018) certified.
            </p>
            <p class="font-italic">
                "Satish Pradhan Dnyanasadhana College Thane is the right place where you can achieve your academic and career goals."
            </p>
            <a href="#" class="btn btn-info mt-3">Read More</a>
        </div>
    </div>
</div>


<!-- Featured Programs Section -->
<div class="featured-programs py-5">
    <h3 class="text-center text-primary mb-4">Our Featured Programs</h3>
    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <img src="~/Content/images/program1.jpg" class="card-img-top" alt="Program 1">
                <div class="card-body">
                    <h5 class="card-title">B.Sc. Computer Science</h5>
                    <p class="card-text">Explore cutting-edge technologies and programming languages.</p>
                    <a href="#" class="btn btn-primary">Learn More</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <img src="~/Content/images/program2.jpg" class="card-img-top" alt="Program 2">
                <div class="card-body">
                    <h5 class="card-title">B.Com</h5>
                    <p class="card-text">Learn the foundations of commerce and financial management.</p>
                    <a href="#" class="btn btn-primary">Learn More</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <img src="~/Content/images/program3.jpg" class="card-img-top" alt="Program 3">
                <div class="card-body">
                    <h5 class="card-title">M.A. in English</h5>
                    <p class="card-text">Deep dive into literature, linguistics, and advanced research.</p>
                    <a href="#" class="btn btn-primary">Learn More</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Testimonials Section -->
<div class="testimonials-section bg-light py-5">
    <h3 class="text-center mb-4 text-success">What Our Students Say</h3>
    <div class="row text-center">
        <div class="col-md-4">
            <div class="testimonial-card shadow-sm p-3">
                <p>"The faculty here is amazing, and the curriculum is practical and career-focused. I landed a job right after graduation!"</p>
                <h5 class="font-weight-bold">- John Doe, B.Sc. IT</h5>
            </div>
        </div>
        <div class="col-md-4">
            <div class="testimonial-card shadow-sm p-3">
                <p>"The college has an excellent learning environment and helped me build strong professional connections."</p>
                <h5 class="font-weight-bold">- Jane Smith, M.A. English</h5>
            </div>
        </div>
        <div class="col-md-4">
            <div class="testimonial-card shadow-sm p-3">
                <p>"The extracurricular activities and student clubs here really helped me develop soft skills that employers value."</p>
                <h5 class="font-weight-bold">- Kevin Brown, B.Com</h5>
            </div>
        </div>
    </div>
</div>
<!-- Campus Gallery Section -->
<div class="campus-gallery py-5">
    <h3 class="text-center text-primary mb-4">Explore Our Campus</h3>
    <div class="row">
        <div class="col-md-3">
            <img src="~/Content/images/campus1.jpg" class="img-fluid shadow-sm rounded" alt="Campus 1">
        </div>
        <div class="col-md-3">
            <img src="~/Content/images/campus2.jpg" class="img-fluid shadow-sm rounded" alt="Campus 2">
        </div>
        <div class="col-md-3">
            <img src="~/Content/images/campus3.jpg" class="img-fluid shadow-sm rounded" alt="Campus 3">
        </div>
        <div class="col-md-3">
            <img src="~/Content/images/campus4.jpg" class="img-fluid shadow-sm rounded" alt="Campus 4">
        </div>
    </div>
</div>
<!-- News & Events Section -->
<div class="news-events py-5">
    <h3 class="text-center text-warning mb-4">News & Events</h3>
    <div class="row">
        <div class="col-md-6">
            <div class="event-item" style="margin-left:15px;">
                <h4>Annual Sports Meet 2024</h4>
                <p>The college is organizing an annual sports meet on November 20th, 2024. Don't miss the fun and excitement!</p>
                <a href="#" class="btn btn-outline-warning">More Details</a>
            </div>
        </div>
        <div class="col-md-6">
            <div class="event-item" style="margin-left:15px;">
                <h4>Alumni Meet 2024</h4>
                <p>Our annual alumni meet will be held on December 5th, 2024. Reconnect with old friends and share your success stories.</p>
                <a href="#" class="btn btn-outline-warning">More Details</a>
            </div>
        </div>
    </div>
</div>

